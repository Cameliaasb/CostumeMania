<%# navbar  %>
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%# logo %>
    <%= link_to root_path do %>
      <%= image_tag "logo.png", class:"navbar-brand", width:120%>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get">
      <div class="search-form-control form-group ">
        <input class="form-control string required" type="text" name="query" id="search_query" placeholder="Search costume" value="<%= params[:query] %>" />
        <button type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i>
        </button>
      </div>
    </form>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <%# Ajouter un costume => si t'es pas connecté: ça ne s'affiche pas %>
            <% if user_signed_in? %>
            <%=link_to 'Add a costume', new_costume_path, class:"nav-link" %>
            <% end %>
          </li>
          <li class="nav-item dropdown">
          <%# user account %>
            <%# avatar %>
            <img class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src=<%=asset_path("user_logo.png") %> />
            <%# user actions %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%# Si t'es connecté %>
              <% if user_signed_in? %>
              <%=link_to 'My Bookings', my_bookings_path, class:"dropdown-item" %>
              <%=link_to 'Costumes', my_costumes_path, class:"dropdown-item" %>
              <%=link_to 'Log-out', destroy_user_session_path, data:{turbo_method: :delete}, class:"dropdown-item" %>
              <%# Si t'es pas connecté %>
              <% else %>
              <%=link_to 'Log-in', new_user_session_path, class:"dropdown-item" %>
              <%=link_to 'Sign-in', new_user_registration_path, class:"dropdown-item"%>
              <% end %>
            </div>
          </li>
      </ul>
    </div>
  </div>
</div>
