<%# Only the costumes owned by current user %>

<div class="padding-x-y">
  <div class="cards">
    <% @costumes.each do |costume| %>
      <%= link_to costume_path(costume) , class:"text-decoration-none text-dark" do %>
        <div class="costume-card">
          <%= cl_image_tag costume.photo.key, height: 700, width: 500, crop: :fill %>
          <div class="costume-card-infos">
            <div>
              <h3><%= costume.name %></h3>
              <p>Size: <%= costume.size %></p>
              <% if costume.reviews.count > 0 %>
              <p>Rating :<%=
                (costume.reviews.sum(&:rating) / costume.reviews.count.to_f ).round(1)
                %>/ 5
              </p>
            <% else %>
              <p>No reviews yet</p>
            <% end %>
            </div>
            <h3> <%= costume.price %>â‚¬/day</h3>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
