 <%# Partial called in costumes/index.html.erb %>

 <form
  novalidate="novalidate" class="full-width"
  action="/costumes/" accept-charset="UTF-8" method="get"  >
   <%# Filters are first processed by search_controller.js in the reload() method %>
   <%# and then by the costumes_controller.rb %>


  <div class="search-form-control form-group" >
    <h2> Filters</h2>

    <%# Keyword search powered by Algolia %>
    <%# Params[:keyword] %>
    <strong class="line purple">Keyword</strong>
    <input
      class="form-control string required"
      type="text" name="keyword" placeholder="Search..."
      data-search-target="keyword" data-action="keyup->search#reload"
    />

    <%# Params[:gender] %>
    <strong class="line purple">Category</strong>
    <div class="checkbox-options">
      <div>
        <input type="checkbox" id="women" name="women" value="false"
              data-action="change->search#reload" data-search-target="women">
        <label for="women"> Women</label>
      </div>
      <div>
        <input type="checkbox" id="men" name="men" value="false"
              data-action="change->search#reload" data-search-target="men">
        <label for="men"> Men</label>
      </div>
    </div>

    <%# Params[:size] %>
    <strong class="line purple">Size</strong>
    <div class="checkbox-options" >

      <div>
        <input type="checkbox" id="XS" name="XS" value="false"
              data-action="change->search#reload" data-search-target="size">
        <label for="XS"> XS</label>
      </div>

      <div>
        <input type="checkbox" id="S" name="S" value="false"
              data-action="change->search#reload" data-search-target="size">
        <label for="S"> S</label>
      </div>
      <div>
        <input type="checkbox" id="M" name="M" value="false"
              data-action="change->search#reload" data-search-target="size">
        <label for="M"> M</label>
      </div>
      <div>
        <input type="checkbox" id="L" name="L" value="false"
              data-action="change->search#reload" data-search-target="size">
        <label for="L"> L</label>
      </div>
      <div>
        <input type="checkbox" id="XL" name="XL" value="false"
              data-action="change->search#reload" data-search-target="size">
        <label for="XL"> XL</label>
      </div>
      <div>
        <input type="checkbox" id="XXL" name="XXL" value="false"
              data-action="change->search#reload" data-search-target="size">
        <label for="XXL"> XXL</label>
      </div>

    </div>

    <%# Params[:price] %>
    <strong class="line purple">Price (â‚¬/day)</strong>
      <div class="two-inputs">

        <%# prices must be digits %>
        <input class="small-input" type="text" placeholder="min" pattern="^\d*$"
              data-action="keyup->search#reload" data-search-target="min">
        <input class="small-input" type="text" placeholder="max" pattern="^\d*$"
              data-action="keyup->search#reload" data-search-target="max">
      </div>

    <%# Params[:condition] %>
    <strong class="line purple">Condition</strong>
    <div class="checkbox-options">
      <div>
        <input type="checkbox" name="perfect" value="false"
              data-action="change->search#reload" data-search-target="perfect">
        <label for="perfect"> Perfect</label>
      </div>
      <div>
        <input type="checkbox" name="used" value="false"
              data-action="change->search#reload" data-search-target="used">
        <label for="used"> Used</label>
      </div>
    </div>


  </div>
</form>
