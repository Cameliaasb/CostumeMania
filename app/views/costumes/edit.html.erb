<div class="container-form">
  <%= simple_form_for @costume do |f| %>
    <%= f.input :name, label: 'Title', class:"input-shadow"%>
      <div class="multi-input">
        <div class="two-row"><%= f.input :size, collection: Costume::SIZE, class:"input-shadow" %></div>
        <div class="two-row"><%= f.input :gender, collection: Costume::GENDER, class:"input-shadow" %></div>
      </div>
      <%= f.input :description, class:"input-shadow" %>
      <div class="multi-input">
        <div class="two-row"> <%= f.input :price, label:"Price per day", class:"input-shadow" %> </div>
        <div class="two-row"> <%= f.input :condition, collection: Costume::CONDITION, class:"input-shadow" %> </div>
      </div>
    <%= f.input :condition, collection: Costume::CONDITION, class:"input-shadow" %>
    <%= f.input :photo, as: :file, class:"input-shadow" %>
    <%= f.button :submit, value:"Save changes", class:"full-width-button" %>
  <% end %>
</div>
