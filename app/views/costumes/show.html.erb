<div class="card-show">
      <%= cl_image_tag @costume.photo.key, height: 700, width: 500, crop: :fill %>

  <div class="card-footer">

    <div>
      <div class="infos-bubbles">
        <p>Size : <%= @costume.size %></p>
        <p>Gender : <%= @costume.gender %></p>
      </div>
      <h2> <%= @costume.name %></h2>
      <h3> <%= @costume.price %>â‚¬ / Day </h3>

    </div>

    <div>
      <p><%= @costume.condition == "Perfect" ? "Perfect condition" : @costume.condition %></p>
      <p><%= @costume.description %></p>
    </div>

    <% if current_user != @costume.owner %>

    <div class="">
      <%= simple_form_for [@costume, @booking] do |f| %>
        <div class="form-blank">
          <%= f.input :start_date,
                  label: false,
                  placeholder: "From",
                  as: :string,
                  input_html: { data: { controller: "datepicker" }} %>
          <%= f.input :end_date,
                  label: false,
                  placeholder: "To",
                  as: :string,
                  input_html: { data: { controller: "datepicker" } } %>
        </div>
        <%= f.button :submit, class:"full-width-button", value:"Book now" %>
      <% end %>
    </div>

    <% else %>
      <div class="two-inputs">
        <%= link_to "Edit", edit_costume_path(@costume), class:"full-width-button" %>
        <br>

        <%= link_to "Delete",
            costume_path(@costume), class:"full-width-button",
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
          %>
      </div>
    <% end %>

    <div>
    <% if @costume.reviews.count > 0 %>
      <h3>Reviews</h3>
      <ul>
      <% @costume.reviews.each do |review| %>
        <li>
        <p> <%= review.content %> (<%= review.rating %>/5)</p>
        </li>
      <% end %>
    <% end %>
    </ul>
    </div>
  </div>
</div>
