<div class="card-show">
      <%= cl_image_tag @costume.photo.key, height: 700, width: 500, crop: :fill %>
  <div class="card-footer">

    <div>
      <h2> <%= @costume.name %></h2>
      <h3 class="card-show-pricing"> <%= @costume.price %>â‚¬ / Day </h3>
      <div class="card-show-infos">
        <p>Description : <%= @costume.description %></p>
        <p>Size : <%= @costume.age %> - <%= @costume.size %></p>
        <p>Gender : <%= @costume.gender %></p>
      </div>
    </div>

    <% if current_user != @costume.owner %>

    <div class="form-blank">
      <%= simple_form_for [@costume, @booking] do |f| %>
        <%= f.input :start_date,
                label: "From",
                as: :string,
                input_html: { data: { controller: "datepicker" }} %>
        <%= f.input :end_date,
                label: "To",
                as: :string,
                input_html: { data: { controller: "datepicker" } } %>
        <%= f.button :submit, class:"button", value:"Book this costume" %>
      <% end %>
    </div>

    <% else %>
      <div class="button-edit-delete">
        <%= link_to "Edit", edit_costume_path(@costume), class:"button" %>
        <br>

        <%= link_to "Delete",
            costume_path(@costume), class:"button",
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
          %>
      </div>
    <% end %>

    <div>
    <% if @costume.reviews.count > 0 %>
    <h3>Reviews</h3>
    <ul>
    <% @costume.reviews.each do |review| %>
    <li>
    <p> <%= review.content %> (<%= review.rating %>/5)</p>
    </li>
    <% end %>
    <% else %>
    <p>No reviews Yet</p>
    <% end %>
    </ul>
    </div>
  </div>
</div>
