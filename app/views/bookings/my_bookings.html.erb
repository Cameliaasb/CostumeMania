<div class="padding-x-y">
  <div class="d-flex flex-column gap-3">

    <h2> Received bookings </h2>
    <div class="cards">
      <% @received_active_bookings.each do |booking| %>
        <%= render partial: "bookingcard", locals: { booking: booking, client: false, active: true } %>
      <% end %>
    </div>
    <div class="cards">
      <% @received_inactive_bookings.each do |booking| %>
        <%= render partial: "bookingcard", locals: { booking: booking, client: false, active: false } %>
      <% end %>
    </div>


    <h2> Sent bookings </h2>
    <div class="cards">
      <% @sent_active_bookings.each do |booking| %>
        <%= render partial: "bookingcard", locals: { booking: booking, client: true, active: true } %>
      <% end %>
    </div>
    <div class="cards">
      <% @sent_inactive_bookings.each do |booking| %>
        <%= render partial: "bookingcard", locals: { booking: booking, client: true, active: false } %>
      <% end %>
    </div>

  </div>
</div>
