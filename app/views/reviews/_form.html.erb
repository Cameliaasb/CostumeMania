<%# partial called by bookings/_bookingcard.html.erb %>

<%= form_for [costume, review], data: { action: "submit->rating#valid"} do |f| %>
  <div class="review-form">
      <%= f.text_field :content, placeholder: "Leave a review" %>
      <div class="rate">
        <input type="radio" name="rate" value="5" />
        <label for="star5"  title="text" data-action="click->rating#rate">5</label>
        <input type="radio" name="rate" value="4" />
        <label for="star4" title="text" data-action="click->rating#rate">4</label>
        <input type="radio" name="rate" value="3" />
        <label for="star3" title="text" data-action="click->rating#rate">3</label>
        <input type="radio" name="rate" value="2" />
        <label for="star2" title="text" data-action="click->rating#rate">2</label>
        <input type="radio" name="rate" value="1" />
        <label for="star1" title="text" data-action="click->rating#rate">1</label>
        <%= f.number_field :rating, data: { rating_target: "rateInput"} %>
      </div>
      <%= f.submit "Send review", class:"full-width-button" %>
  </div>
<% end %>
